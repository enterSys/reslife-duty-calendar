{
  "name": "reslife-duty-calendar",
  "version": "1.0.0",
  "description": "A modern web application for managing residential life duty rotas with calendar views and team management",
  "main": "index.html",
  "scripts": {
    "start": "node api/index.js",
    "dev": "nodemon api/index.js",
    "build": "npm run build:css",
    "build:css": "tailwindcss -i ./input.css -o ./output.css --minify",
    "watch:css": "tailwindcss -i ./input.css -o ./output.css --watch",
    "test": "echo 'No tests specified'",
    "migrate": "node scripts/migrate-db.js"
  },
  "keywords": [
    "reslife",
    "residential-life",
    "duty-rota",
    "calendar",
    "team-management",
    "university",
    "student-housing",
    "schedule"
  ],
  "author": "ResLife Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/reslife-duty-calendar.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/reslife-duty-calendar/issues"
  },
  "homepage": "https://yourusername.github.io/reslife-duty-calendar",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.0.43",
    "nodemon": "^3.0.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@vercel/postgres": "^0.5.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ical-generator": "^5.0.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "uuid": "^9.0.1"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
